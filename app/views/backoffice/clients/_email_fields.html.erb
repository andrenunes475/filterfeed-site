<div class='nested-fields w-100'>
  <div class="field">
    <div class="input-group mb-1">
      <div class="input-group-prepend">
        <%= f.label(:address, id: 'address', class: 'input-group-text') do %>
          <i class="fas fa-fw fa-at"></i>
        <% end %>
      </div>
      <%= f.text_field(:address, class: 'form-control', pattern: '[\w\d.]+[@][\w\d]+[.][\w\d]+[.]?[\w\d]*', required: true, placeholder: 'Email', 'aria-describedby': 'address') %>
      <div class="input-group-append">
        <%= link_to_remove_association(f, class: 'input-group-text bg-danger text-white btn btn-outline-danger', id: 'address') do %>
          <i class="fas fa-fw fa-times"></i>
        <% end %>
      </div>
    </div>
  </div>
</div>
