<%= form_for @service, url: url, method: method, html: {class: 'w-50 mx-auto d-flex align-items-center flex-column'} do |f| %>
  <h3><%= text %></h3>
  <div class='w-100'>
    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <%= f.label(:name, id: 'name', class: 'input-group-text') do %>
          <i class="fa fa-fw fa-align-justify"></i>
        <% end %>
      </div>
      <%= f.text_field(:name, class: 'form-control', required: true, placeholder: 'Nome', 'aria-describedby': 'name') %>
    </div>
    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <%= f.label(:text, id: 'text', class: 'input-group-text') do %>
          <i class="fa fa-fw fa-align-justify"></i>
        <% end %>
      </div>
      <%= f.text_field(:text, class: 'form-control', required: true, placeholder: 'Descrição', 'aria-describedby': 'text') %>
    </div>
    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <%= f.label(:image, id: 'image', class: 'input-group-text') do %>
          <i class="fas fa-fw fa-file-image"></i>
        <% end %>
      </div>
      <%= f.file_field(:image, class: 'form-control', required: true, 'aria-describedby': 'image') %>
    </div>
  </div>
  <div>
    <%= f.submit('Salvar', class: 'btn btn-success') %>
    <%= link_to 'Voltar', backoffice_services_path, class: 'btn btn-info' %>
  </div>
<% end %>
