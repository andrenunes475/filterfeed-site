<div class="card mb-3">
  <div class="card-header d-flex align-items-center justify-content-between">
    <div>
      <i class="fas fa-fw fa-clipboard-list "></i>
      Planos Cadastrados
    </div>
    <%= link_to "Novo Plano", new_backoffice_plan_path, class: 'btn btn-success' %>
  </div>
  <div class="card-body">
    <div class="table-responsive">
    <!-- Primeira parte da tabela, com Ã­mpares  -->
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>#</th>
            <th>Status</th>
            <th>Plano</th>
            <th>Exibir</th>
            <th>Editar</th>
            <th>Excluir</th>
            <th style='border: none;'></th>
            <th>#</th>
            <th>Status</th>
            <th>Plano</th>
            <th>Exibir</th>
            <th>Editar</th>
            <th>Excluir</th>
          </tr>
        </thead>
        <tbody>
          <% @plans.each_slice(2) do |plan, plan2| %>
            <tr>
              <% if plan.present? %>
                <td><%= plan.id %></td>
                <td><%= plan.active ? 'Ativado' : 'Desativado' %></td>
                <td><%= plan.content %></td>
                <td align="center"><%= link_to backoffice_plan_activate_path(plan), class: 'btn btn-sm', method: :post do %>
                  <i class="fa-lg fa-fw <%= plan.active ? 'fas fa-check-' : 'far fa-' %>square"></i>
                <% end %></td>
                <td align="center"><%= link_to edit_backoffice_plan_path(plan), class: 'btn btn-sm' do %>
                  <i class="fas fa-lg fa-fw fa-edit"></i>
                <% end %></td>
                <td align="center"><%= link_to backoffice_plan_path(plan), method: 'delete', class: 'btn btn-sm' do %>
                  <i class="fas fa-lg fa-fw fa-trash-alt"></i>
                <% end %></td>
                <td style='border: none;'></td>
              <% end %>
              <% if plan2.present? %>
                <td><%= plan2.id %></td>
                <td><%= plan2.active ? 'Ativado' : 'Desativado' %></td>
                <td><%= plan2.content %></td>
                <td align="center"><%= link_to backoffice_plan_activate_path(plan2), class: 'btn btn-sm', method: :post do %>
                  <i class="fa-lg fa-fw <%= plan2.active ? 'fas fa-check-' : 'far fa-' %>square"></i>
                <% end %></td>
                <td align="center"><%= link_to edit_backoffice_plan_path(plan2), class: 'btn btn-sm' do %>
                  <i class="fas fa-lg fa-fw fa-edit"></i>
                <% end %></td>
                <td align="center"><%= link_to backoffice_plan_path(plan2), method: 'delete', class: 'btn btn-sm' do %>
                  <i class="fas fa-lg fa-fw fa-trash-alt"></i>
                <% end %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
