<div class='container session-container'>
  <div class='card card-login mx-auto mt-5'>
    <div class='card-header'>
      <h5 class='mb-0'>Login</h5>
    </div>
    <div class='card-body'>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class='form-group'>
          <%= f.email_field(:email, autofocus: :true, placeholder: 'Email', autocomplete: 'email', required: :true, class: 'form-control') %>
        </div>

        <div class='form-group'>
          <%= f.password_field(:password, placeholder: 'Senha', autocomplete: 'current-password', required: :true, class: 'form-control') %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class='form-group'>
            <div class='checkbox'>
              <%= f.check_box(:remember_me) %>
              <%= f.label(:remember_me) %>
            </div>
          </div>
        <% end -%>

        <%= f.submit('Entrar', class: 'btn btn-primary btn-block') %>
      <% end %>
      <div class='text-center'>
        <%= render 'devise/shared/links' %>
      </div>
    </div>
  </div>
</div>
