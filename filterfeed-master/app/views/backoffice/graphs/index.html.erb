<div class="card mb-3">
  <div class="card-header d-flex align-items-center justify-content-between">
    <div>
      <i class="far fa-fw fa-window-maximize"></i>
      Landing Pages
    </div>
    <%= link_to "Nova Landing Page", new_backoffice_graph_path, class: 'btn btn-success' %>
  </div>
  <div class="card-body">
    <div class="table-responsive">
    <!-- Primeira parte da tabela, com ímpares  -->
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>#</th>
            <th>Status</th>
            <th class="w-75">Descrição</th>
            <th>Exibir</th>
            <th>Editar</th>
            <th>Excluir</th>
          </tr>
        </thead>
        <tbody>
          <% @graphs.each do |graph| %>
            <tr>
              <% if graph.present? %>
                <td><%= graph.id %></td>
                <td><%= graph.active ? 'Ativado' : 'Desativado' %></td>
                <td><%= graph.name %></td>
                <td align="center"><%= link_to backoffice_graph_activate_path(graph), class: 'btn btn-sm', method: :post do %>
                  <i class="fa-lg fa-fw <%= graph.active ? 'fas fa-check-' : 'far fa-' %>square"></i>
                <% end %></td>
                <td align="center"><%= link_to edit_backoffice_graph_path(graph), class: 'btn btn-sm' do %>
                  <i class="fas fa-lg fa-fw fa-edit"></i>
                <% end %></td>
                <td align="center"><%= link_to backoffice_graph_path(graph), method: 'delete', class: 'btn btn-sm', data: {confirm: "Excluir o gráfico?"} do %>
                  <i class="fas fa-lg fa-fw fa-trash-alt"></i>
                <% end %></td>
                <td style='border: none;'></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
