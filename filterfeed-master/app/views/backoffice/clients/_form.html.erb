<%= form_for @client, url: url, method: method, html: {class: 'w-50 mx-auto d-flex align-items-center flex-column'} do |f| %>
  <h3><%= text %></h3>
  <div class='w-100'>
    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <%= f.label(:name, id: 'name', class: 'input-group-text') do %>
          <i class="fas fa-fw fa-id-card"></i>
        <% end %>
      </div>
      <%= f.text_field(:name, class: 'form-control', required: true, placeholder: 'Nome', 'aria-describedby': 'name') %>
    </div>
    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <%= f.label(:cnpj, id: 'cnpj', class: 'input-group-text') do %>
          <i class="fas fa-fw fa-fingerprint"></i>
        <% end %>
      </div>
      <%= f.text_field(:cnpj, class: 'form-control', required: true, placeholder: 'CNPJ', 'data-mask': '99.999.999/9999-99', 'aria-describedby': 'cnpj') %>
    </div>
    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <%= f.label(:phone, id: 'phone', class: 'input-group-text') do %>
          <i class="fas fa-fw fa-phone"></i>
        <% end %>
      </div>
      <%= f.text_field(:phone, class: 'form-control', required: true, placeholder: 'Telefone', 'data-mask': '(99) 9999-9999', 'aria-describedby': 'phone') %>
    </div>
    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <%= f.label(:product, id: 'product', class: 'input-group-text') do %>
          <i class="fas fa-fw fa-chart-line"></i>
        <% end %>
      </div>
      <%= f.text_field(:product, class: 'form-control', required: true, placeholder: 'Dashboard', 'aria-describedby': 'product') %>
    </div>
    <div id='emails' class='d-flex align-items-center flex-column mb-3'>
      <%= f.fields_for :emails do |email| %>
        <%= render 'email_fields', f: email %>
      <% end %>
      <%= link_to_add_association(f, :emails, class: 'btn btn-sm btn-outline-primary', onclick: 'this.blur()') do %>
        <i class="fas fa-fw fa-plus"></i>
        Adicionar Email
      <% end %>
    </div>
  </div>
  <div>
    <%= f.submit('Salvar', class: 'btn btn-success') %>
    <% if method == :patch %>
      <%= link_to 'Excluir', backoffice_client_path(@client), class: 'btn btn-outline-danger', onclick: 'this.blur()', method: :delete, data: {confirm: 'Excluir o cadastro do cliente?'} %>
    <% end %>
    <%= link_to 'Voltar', backoffice_clients_path, class: 'btn btn-info' %>
  </div>
<% end %>
