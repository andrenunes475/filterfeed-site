<div class="card mb-3">
  <div class="card-header d-flex align-items-center justify-content-between">
    <div>
      <i class="fa fa-fw fa-align-justify"></i>
      Texto (Equipe)
    </div>
    <%= link_to 'Novo Texto (Equipe)', new_backoffice_another_service_path, class: 'btn btn-success' %>
  </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
          <tr>
            <th>#</th>
            <th class='w-50'>Nome</th>
            <th class='w-50'>Descrição</th>
            <th>Editar</th>
            <th>Excluir</th>
          </tr>
        </thead>
        <tbody>
          <% @another_services.each do |another_service| %>
            <tr>
              <td><%= another_service.id %></td>
              <td><%= another_service.name %></td>
              <td><%= another_service.text %></td>
              <td align="center"><%= link_to edit_backoffice_another_service_path(another_service), class: 'btn btn-sm' do %>
                <i class="fas fa-lg fa-fw fa-edit"></i>
              <% end %></td>
              <td align="center"><%= link_to backoffice_another_service_path(another_service), method: 'delete', class: 'btn btn-sm', data: {confirm: "Excluir o produto 2?"} do %>
                <i class="fas fa-lg fa-fw fa-trash-alt"></i>
              <% end %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
